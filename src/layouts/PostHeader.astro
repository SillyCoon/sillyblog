---
import PostsTags from '../components/PostsTags.astro';
import Date from '../components/base/Date.astro';

const { description, pubDate, image, tags } = Astro.props.frontmatter;
---

<section class="mb-4">
  <span class="text-xl italic">{description}</span>

  <div class="flex items-center justify-between">
    <Date date={pubDate} />
    <PostsTags tags={tags} />
  </div>
  <img src={image?.url} width="300" alt={image?.alt} />
</section>
